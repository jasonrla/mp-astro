---
import Layout from "../layouts/Layout.astro";
import Cart from "../components/Cart";
import OrderSummary from "../components/OrderSummary";
---

<Layout title="Carrito de Compras - Mercado Pago">
  <main
    class="font-body min-h-screen bg-gradient-to-r from-[#fffbf0] to-[#fff0f5] py-8"
  >
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="mb-8 text-center">
        <h1
          class="font-heading text-start text-lg font-bold text-gray-900 uppercase md:text-2xl"
        >
          Tu Carrito
        </h1>
      </div>

      <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
        <div class="lg:col-span-2">
          <Cart client:only="react" />
        </div>

        <div class="lg:col-span-1">
          <div class="lg:sticky lg:top-8">
            <OrderSummary client:only="react" />
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
